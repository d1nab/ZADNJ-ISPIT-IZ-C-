#include <iostream>
#include <cstring>

int countLetters(const char *str) {
    int count = 0;
    while (*str != '\0') {
        if (std::isalpha(*str)) {
            count++;
        }
        str++;
    }
    return count;
}

int main() {
    const char *str = "Hello, World!";
    int letterCount = countLetters(str);
    std::cout << "The string \"" << str << "\" has " << letterCount << " letters.\n";
    return 0;
}
