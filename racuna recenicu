#include <iostream>
using namespace std;

int main() {
    char sentence[100];
    char *ptr = sentence;
    int length = 0;

    cout << "Enter a sentence: ";
    cin.getline(sentence, 100);

    while (*ptr != '\0') {
        length++;
        ptr++;
    }

    cout << "Length of sentence is " << length << endl;

    return 0;
}
