#include <iostream>
using namespace std;
int* find_smallest(int arr[], int n) {
int* smallest = &arr[0];
for(int i=1; i<n; i++) {
if(arr[i] < *smallest) {
smallest = &arr[i];
}}
return smallest;}
int main() {
int n;
cout << "Enter the size of the array: ";
cin >> n;
int arr[n];
cout << "Enter the elements of the array: ";
for(int i=0; i<n; i++) {
cin >> arr[i];}
int* smallest_ptr = find_smallest(arr, n);
cout << "The smallest number in the array is: " << *smallest_ptr << endl;
cout << "The memory location of the smallest number is: " << smallest_ptr << endl;
return 0;
}
